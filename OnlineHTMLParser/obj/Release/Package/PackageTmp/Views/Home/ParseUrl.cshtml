<div class="container">
<form method="get" action="/Home/HtmlParser">
  <div class="form-group">
    <label for="email">Folder Url</label>
    <input type="text" class="form-control" name="parsefolder" required>
       <label for="email">Parser Type</label>
    <select class="form-control" name="type" required>
        <option value="html">Html Parser</option>
        <option  value="razor">Razor Parser</option>
          <option  value="both">Both Parser</option>
    </select>

      <input type="file" multiple="multiple" accept=".html,.cshtml" required />
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
    </div>